# EditorConfig â€” https://editorconfig.org
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Go requires tabs
[*.go]
indent_style = tab

# Markup, config, and data files
[*.{json,yml,yaml,toml}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash}]
end_of_line = lf
indent_size = 2

# PowerShell
[*.{ps1,psm1,psd1}]
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab

# Frontend (npm installer package)
[*.{js,ts,jsx,tsx,css,html}]
indent_size = 2
